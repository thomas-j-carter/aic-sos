{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "occurred_at",
    "tenant_id",
    "workspace_id",
    "idempotency_key",
    "payload"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "run.completed"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "const": 1
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "tenant_id": {
      "type": "string"
    },
    "workspace_id": {
      "type": "string"
    },
    "idempotency_key": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "required": [
        "run_id",
        "workflow_id",
        "status",
        "artifact_version",
        "policy_bundle_version"
      ],
      "properties": {
        "run_id": {
          "type": "string"
        },
        "workflow_id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "succeeded",
            "failed",
            "denied",
            "canceled"
          ]
        },
        "artifact_version": {
          "type": "string"
        },
        "policy_bundle_version": {
          "type": "string"
        },
        "cost_summary": {
          "type": "object"
        },
        "evidence_bundle_ref": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
