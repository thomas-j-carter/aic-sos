# Development Environment Configuration
# Copy this file to .env for local development customization
# Note: .env is excluded from version control; use this template for defaults

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO Configuration (S3-compatible object storage)
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=evidence-bundles
S3_REGION=us-east-1

# Service Ports (if running services locally beyond docker-compose)
CONTROL_PLANE_PORT=8000
EXECUTION_PLANE_PORT=8001
CONNECTOR_GATEWAY_PORT=8002
AGENT_PORT=8003

# Logging Level
LOG_LEVEL=debug

# Development Flags
DEV_MODE=true
ENABLE_SWAGGER_UI=true
ENABLE_PROFILING=false

# Optional: Local service addresses (for direct calls, not docker)
CONTROL_PLANE_URL=http://localhost:8000
EXECUTION_PLANE_URL=http://localhost:8001
CONNECTOR_GATEWAY_URL=http://localhost:8002

