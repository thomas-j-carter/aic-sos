{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RunCompletedEvent",
  "type": "object",
  "additionalProperties": false,
  "required": ["event_type", "occurred_at", "tenant_id", "correlation_id", "actor", "payload"],
  "properties": {
    "event_type": {"type": "string", "const": "run.completed"},
    "occurred_at": {"type": "string"},
    "tenant_id": {"type": "string"},
    "correlation_id": {"type": "string"},
    "actor": {"type": "string"},
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "execution_status"],
      "properties": {
        "run_id": {"type": "string"},
        "execution_status": {"type": "string", "enum": ["succeeded"]}
      }
    }
  }
}
