{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecuteRunRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "correlation_id", "actor", "run_id", "policy_snapshot_hash"],
  "properties": {
    "tenant_id": {"type": "string"},
    "correlation_id": {"type": "string"},
    "actor": {"type": "string"},
    "run_id": {"type": "string"},
    "policy_snapshot_hash": {"type": "string"},
    "approval_token": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["token_id", "policy_snapshot_hash", "issued_at"],
      "properties": {
        "token_id": {"type": "string"},
        "policy_snapshot_hash": {"type": "string"},
        "issued_at": {"type": "string"}
      }
    },
    "force_fail": {"type": "boolean"}
  }
}
